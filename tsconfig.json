{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "allowUnusedLabels": false,
        "incremental": true,
        "tsBuildInfoFile": "./.tsbuildinfo",
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@andes/fhir": [
                "./types/andes-fhir.d.ts"
            ],
            "@andes/fhir/*": [
                "./packages/andes-fhir.d.ts"
            ],
            "@andes/event-bus/*": [
                "./packages/event-bus/*"
            ],
            "@andes/drive/*": [
                "./packages/drive/*"
            ],
            "@andes/unit-test": [
                "./packages/unit-testing/index.ts"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}